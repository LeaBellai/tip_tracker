
<button type="button" class="btn btn-primary">Add Tips</button>
<div id="chartContainer" style="height: 300px; width: 100%;"> </div>  

<h1>Listing Tips</h1>

<table>
  <thead>
    <tr>
      <th>Start date</th>
      <th>End date</th>
      <th>Monday amount</th>
      <th>Tuesday amount</th>
      <th>Wednesday amount</th>
      <th>Thursday amount</th>
      <th>Friday amount</th>
      <th>Saturday amount</th>
      <th>Sunday amount</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tips.each do |tip| %>
      <tr>
        <td><%= tip.start_date %></td>
        <td><%= tip.end_date %></td>
        <td><%= tip.monday_amount %></td>
        <td><%= tip.tuesday_amount %></td>
        <td><%= tip.wednesday_amount %></td>
        <td><%= tip.thursday_amount %></td>
        <td><%= tip.friday_amount %></td>
        <td><%= tip.saturday_amount %></td>
        <td><%= tip.sunday_amount %></td>
        <td><%= link_to 'Show', tip %></td>
        <td><%= link_to 'Edit', edit_tip_path(tip) %></td>
        <td><%= link_to 'Destroy', tip, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Tip', new_tip_path %>
